<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ffffff"
    android:layout_height="match_parent">

    
    <LinearLayout
        android:layout_marginTop="80dp"
        android:orientation="vertical"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/logo"
            android:textColor="#ffffff"

            android:textSize="20dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="24dp"
            android:layout_gravity="center"
            android:text="用户登录"
            android:layout_marginTop="15dp"/>
        <RelativeLayout
            android:background="@drawable/line_bc_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:text="用户名"
                android:textSize="18dp"/>
            <EditText
                android:textColorHint="#d6b6b6"
                android:hint="请输入用户名"
                android:id="@+id/ed_username"
                android:textColor="#000000"
                android:background="@drawable/bc_none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"/>
            <TextView
                android:id="@+id/clear_txt"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/clear"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/line_bc_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="密码"
                android:textSize="18dp"/>
            <EditText
                android:password="true"
                android:textColorHint="#d6b6b6"
                android:hint="请输入密码"
                android:id="@+id/ed_password"
                android:textColor="#000000"
                android:background="@drawable/bc_none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"/>
            <TextView
                android:id="@+id/eye_txt"
                android:visibility="gone"
                android:layout_width="25dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/eye_close"/>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记用户名或密码请联系管理员"/>
        <Button
            android:id="@+id/login_btn"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="登  录"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_icon"
            android:layout_marginTop="60dp"/>
    </LinearLayout>
</RelativeLayout>
